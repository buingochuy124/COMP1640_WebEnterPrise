@model List<COMP1640.Models.PostModel>


 
@{
    ViewData["Title"] = "Post";
    var now = DateTime.Today;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">



    <title>Posts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

    <link href="~/css/poststyle.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container" >

        <div class="row">
           
            <div class="col-md-12">
              
                <div id="content" class="content content-full-width">
                        <div class="profile-content">

                            <div class="tab-content p-0">

                                <div class="tab-pane fade active show" id="profile-post">

                                    <ul class="timeline">
                                        <li>
                                       
                                        <div class="timeline-body" style="background-color:#f2f3f4">
                                            <div class="input pb-4">
                                                <form action="">
                                                    <div class="input-group">
                                                        <br />
                                                        <br />

                                                        <textarea class="form-control" placeholder="Write a comment..." name="text" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'></textarea>
                                                        
                                                    </div>
                                                    <br/>
                                                    <span class="input-group-btn p-l-10 ">
                                                        <button class="btn btn-primary f-s-12 rounded-corner" id="btn_comment" type="button">Submit</button>
                                                    </span>
                                                    <div class="p-1">
                                                        <label class="form-check-label" style="position:absolute">
                                                            Anonymous Post
                                                        </label>
                                                        <input type="checkbox" class="form-check-input" id="anonymouscomment" value="Anonymous">
                                                    </div>

                                                        
                                                </form>
                                            </div>
                                        </div>
                                        </li>
                                    </ul>
                                    <ul class="timeline">
                                       
                                        @foreach (var item in Model)
                                            {
                                            <li>

                                                <div class="timeline-time">
                                                    <span class="date">@(Convert.ToInt32((now - item.Date).TotalDays)) Day ago</span>
                                                </div>
                                                <div class="timeline-body" style="background-color:#dee2e6">
                                                    <div class="timeline-header">
                                                        <span class="userimage"><img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt=""></span>
                                                        <span class="username">
                                                            <a href="javascript:;">
                                                                    @if (User.IsInRole("Staff"))
                                                                    {
                                                                        if (item.IsAnonymous == true)
                                                                        {
                                                                            @ViewBag.Anonymous
                                                                        }
                                                                        else
                                                                        {
                                                                            @Html.DisplayFor(modelItem => item.User.LastName)
                                                                        }
                                                                    }
                                                            </a> <small></small>
                                                        </span>
                                                    </div>
                                                    <div class="timeline-content">
                                                        <p>
                                                                 @Html.DisplayFor(modelItem => item.Content)

                                                        </p>
                                                        <p class="text-primary">
                                                            #@Html.DisplayFor(modelItem => item.Category.Name)
                                                        </p>
                                                    </div>
                                                    <hr/>
                                                    <div class="timeline-footer pt-0" style="background-color:#dee2e6">
                                                        <a href="javascript:;" class="m-r-15 text-inverse-lighter"><i class="fa fa-thumbs-up fa-fw fa-lg m-r-3"></i> Like</a>
                                                        <a href="javascript:;" class="m-r-15 text-inverse-lighter"><i class="fa fa-thumbs-down fa-fw fa-lg m-r-3"></i> Dislike</a>
                                                        <a href="javascript:;" class="m-r-15 text-inverse-lighter"><i class="fa fa-comments fa-fw fa-lg m-r-3"></i> Comment</a>

                                                    </div>
                                                    <div class="timeline-comment-box" style="background-color:#f2f3f4">
                                                        <div class="user"><img src="https://bootdey.com/img/Content/avatar/avatar3.png"></div>
                                                        <div class="input pb-4">
                                                            <form action="">
                                                                <div class="input-group">
                                                                    <br />
                                                                    <br />
                                                                 
                                                                    <textarea class="form-control" placeholder="Write a comment..." name="text" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'></textarea>
                                                                    <span class="input-group-btn p-l-10">
                                                                        <button class="btn btn-primary f-s-12 rounded-corner" id="btn_comment" type="button">Comment</button>
                                                                    </span>
                                                                </div>
                                                                <div class="">
                                                                    <label class="form-check-label"  style="position:absolute">
                                                                        Anonymous Comment
                                                                    </label>
                                                                    <input type="checkbox" class="form-check-input" id="anonymouscomment" value="Anonymous">
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                            </li>
                                            }
                                       
                                      
                                    </ul>
                                    <div>
                                        <br />
                                        <br />
                                        <br />
                 
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">

    </script>
</body>
</html>
